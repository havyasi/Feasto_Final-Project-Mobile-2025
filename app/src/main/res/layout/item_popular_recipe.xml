<?xml version="1.0" encoding="utf-8"?>
<com.example.foodrink.ui.GlassmorphicCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="150dp"
    android:layout_height="200dp"
    android:layout_margin="8dp"
    app:cardCornerRadius="18dp"
    app:cardElevation="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardCornerRadius="18dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/ivPopularRecipeImage"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:scaleType="centerCrop"
            android:contentDescription="Popular Recipe Image" />

        <TextView
            android:id="@+id/tvPopularRecipeTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:fontFamily="@font/poppins_medium"
            android:maxLines="2"
            android:ellipsize="end"
            android:textSize="14sp" />
    </LinearLayout>
</com.example.foodrink.ui.GlassmorphicCardView>