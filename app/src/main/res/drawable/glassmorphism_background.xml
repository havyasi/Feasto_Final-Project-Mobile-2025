<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Base semi-transparent background -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#50FFFFFF" />
            <corners android:radius="10dp" />
        </shape>
    </item>

    <!-- Subtle inner highlight at the top -->
    <item android:top="1dp" android:left="1dp" android:right="1dp">
        <shape android:shape="rectangle">
            <corners android:radius="24dp" />
            <gradient
                android:angle="270"
                android:startColor="#4DFFFFFF"
                android:endColor="#00FFFFFF"
                android:type="linear" />
        </shape>
    </item>

    <!-- Light reflection edge -->
    <item>
        <shape android:shape="rectangle">
            <stroke android:color="#66FFFFFF" android:width="1dp" />
            <corners android:radius="24dp" />
        </shape>
    </item>
</layer-list>